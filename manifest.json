{
    "manifest_version": 2,

    "name": "Couchtuner Companion",
    "description": "This extension extends the functionality of Couchtuner by way of bookmarks, and history.",
    "version": "0.0.1",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*.couchtuner.com/*",
                "http://*.couchtuner.eu/*",
                "http://*.couchtuner.eu.com/*",
                "http://*.couchtuner.com.eu/*",
                "http://*.zzstream.li/*"
            ],
            "css": [
                "css/bootstrap.min.css",
                "css/angular-motion.min.css",
                "css/bootstrap-additions.min.css",
                "css/fixbootstrap.css"
            ],
            "js": [
                "js/lib/jquery-2.1.1.min.js",
                "js/lib/jquery-regex.js",
                "js/lib/angular.js",
                "js/lib/angular-animate.min.js",
                "js/lib/ui-bootstrap-tpls-0.11.2.js",
                "js/lib/angular-strap.min.js",
                "js/lib/angular-strap.tpl.min.js",
                "js/lib/linq.js",
                "js/app.js",
                "js/services/SyncService.js",
                "js/services/SettingsService.js",
                "js/services/LinkService.js",
                "js/services/BookmarkScanService.js",
                "js/services/HistoryScanService.js",
                "js/controllers/SidebarController.js",
                "js/controllers/SettingsController.js",
                "js/controllers/BookmarkController.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "html/sidebar.html",
        "html/settingsTab.html",
        "html/bookmarksTab.html",
        "html/historyTab.html",
        "html/sidebarButton.html",
        "js/lib/angular-animate.min.js.map",
        "js/lib/angular-strap.min.js.map",
        "js/lib/jquery-2.1.1.min.map"
    ]
}